

<% if @user.errors.any? %>
  <div id="error_explanation">

  <!-- the "alert alert-error" class below enables
    bootstrap to surround the "form contains.." with red
    and prints the error messages in red
  -->

    <div class="alert alert-error">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>